@model BookStore.WebApp.Models.Domain.Author
<div class="container pt-5">
	<div class="row">
		<div class="col-md-6">
			<h3>Yazarlar</h3>
			<form asp-action="Update" method="post">
				<input type ="hidden" asp-for="Id"/>
				<div class="form-group">
					<label asp-for="Name">İsim *</label>
					<input type="text" class="form-control" asp-for="Name"/>
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				@if(TempData["msg"] != null)
				{
					<div class="form-group">
						@TempData["msg"]
					</div>
				}
				<div class="form-group pt-3">
					<button type="submit" class="btn btn-warning"><i class="bi bi-save"></i>Kaydet</button>
					<a href="/Author/GetAll" class="btn btn-primary"><i class="bi bi-list"></i>Listele</a>
				</div>
			</form>

		</div>
	</div>
</div>

