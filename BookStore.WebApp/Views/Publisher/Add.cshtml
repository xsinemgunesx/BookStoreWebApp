@model BookStore.WebApp.Models.Domain.Publisher

<div class = "container pt-5">
	<div class = "row">
		<div class = "col-md-6">
			<h3>Yayınevi Ekle</h3>
			<form asp-action = "Add" method="post">
				<div class="form-group">
					<label asp-for="Name">Yayınevi İsim *</label>
					<input type="text" class="form-control" asp-for="Name"/>
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				@if(TempData["msg"] != null)
				{
					<div class="form-group">
						@TempData["msg"]
					</div>
				}
				<div class="form-group pt-3">
					<button type="submit" class="btn btn-warning"><i class="bi bi-save"></i>Kaydet</button>
					<a href="/Publisher/GetAll" class="btn btn-primary"><i class="bi bi-list"></i>Listele</a>
				</div>
			</form>
		</div>
	</div>
</div>

